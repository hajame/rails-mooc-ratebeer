<p style="color: green"><%= notice %></p>

<%= render @beer_club %>

<div id="members">
  <h3>Members</h3>
  <ul>
    <% @beer_club.users.each do |user| %>
      <li>
        <%= link_to user.username, user %>
      </li>
    <% end %>
  </ul>
</div>

<div>
  <%= link_to "Edit this beer club", edit_beer_club_path(@beer_club) unless current_user.nil? %> |
  <%= link_to "Back to beer clubs", beer_clubs_path %>

  <%= button_to "Destroy this beer club", @beer_club, method: :delete unless current_user.nil? %>
</div>
