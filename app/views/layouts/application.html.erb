<!DOCTYPE html>
<html>
<head>
  <title>Ratebeer</title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  <%= javascript_importmap_tags %>
</head>

<body class="text-bg-dark">
<nav class="navbar navbar-expand-lg navbar-dark">
  <div class="container-fluid">
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item">
          <%= link_to 'breweries', breweries_path, { class: "nav-link" } %>
        </li>
        <li class="nav-item">
          <%= link_to 'beers', beers_path, { class: "nav-link" } %>
        </li>
        <li class="nav-item">
          <%= link_to 'ratings', ratings_path, { class: "nav-link" } %>
        </li>
        <li class="nav-item">
          <%= link_to 'users', users_path, { class: "nav-link" } %>
        </li>
        <li class="nav-item">
          <%= link_to 'clubs', beer_clubs_path, { class: "nav-link" } %>
        </li>
        <li class="nav-item">
          <%= link_to 'places', places_path, { class: "nav-link" } %>
        </li>
        <li class="nav-item">
          <%= link_to 'styles', styles_path, { class: "nav-link" } %>
        </li>
        <% if current_user %>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              ğŸº <%= current_user.username %>
            </a>
            <ul class="dropdown-menu dropdown-menu-dark">
              <li><%= link_to "Profile", current_user, { class: "dropdown-item" } %></li>
              <li>
                <%= link_to "Rate a new beer", new_rating_path, { class: "dropdown-item" } %>
              </li>
              <li>
                <%= link_to "Join a club", new_membership_path, { class: "dropdown-item" } %>
              </li>
              <li>
                <hr class="dropdown-divider">
              </li>
              <li>
                <%= link_to "Sign out", signout_path, class: "dropdown-item", data: { "turbo-method": :delete } %>
              </li>
              <li>
              </li>
            </ul>
          </li>


          <li class="nav-item">

          </li>

        <% else %>
          <li class="nav-item">
            <%= link_to "ğŸº Sign up", signup_path, { class: "nav-link" } %>
          </li>
          <li class="nav-item">
            <%= link_to "Sign in", signin_path, { class: "nav-link" } %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>

<div class="container">
  <% if notice %>
    <div class="alert alert-primary" role="alert">
      <%= notice %>
    </div>
  <% end %>

  <div class="row">
    <div class="col-sm-8">
      <%= yield %>
    </div>
    <div class="col-sm-4">
      <img
        src="<%= asset_url('beer_cat_h250_lowres.jpg') %>"
        height="250"
        style="padding-top:30px"
      >
    </div>
  </div>
</div>

</body>
</html>
