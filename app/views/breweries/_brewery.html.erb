<div id="<%= dom_id brewery %>">

  <h2>
    <%= brewery.name %>
    <% unless brewery.active? %>
      <span class="badge bg-secondary">retired</span>
    <% end %>
  </h2>

  <p>
    <i>Established in <%= brewery.year %></i>
  </p>

  <p>
    Number of beers: <%= brewery.beers.count %>
  </p>

  <table id="brewery_beers" class="table table-dark table-striped">
    <thead>
    <th><%= link_to "Name", beers_path(order: "name") %></th>
    <th><%= link_to "Style", beers_path(order: "style") %></th>
    <th><%= link_to "Rating", beers_path(order: "rating") %></th>
    </thead>
    <% brewery.beers.each do |beer| %>
      <tr>
        <td><%= link_to beer.name, beer %></td>
        <td><%= link_to beer.style.beer_type, beer.style %></td>
        <td><%= beer.average_rating %></td>
      </tr>
    <% end %>
  </table>

  <p>
    Brewery has <%= pluralize(brewery.ratings.count, "rating", plural: "ratings") %> with an average
    of <%= brewery.average_rating %>
  </p>
</div>
