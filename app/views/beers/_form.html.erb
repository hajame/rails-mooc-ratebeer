      <h2><%= pluralize(beer.errors.count, "error") %> prohibited this beer from being saved:</h2>

      <ul>
        <% beer.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form.label :name, class: "form-label" %>
  <%= form.text_field :name, class: "form-control text-bg-dark  mb-3" %>

  <%= form.select :style_id, options_from_collection_for_select(@styles, :id, :beer_type, selected: @beer.style_id), {}, { :class => "form-select text-bg-dark  mb-3" } %>
  <%= form.select :brewery_id, options_from_collection_for_select(@breweries, :id, :name, selected: @beer.brewery_id), {}, { :class => "form-select text-bg-dark  mb-3" } %>

  <%= form.submit class: "btn btn-outline-primary" %>
<% end %>
