<h1>Beers</h1>

<table id="beers" class="table table-dark table-striped">
  <thead>
  <th>Beer</th>
  <th>Style</th>
  <th>Brewery</th>
  <th>Rating</th>
  </thead>
  <% @beers.each do |beer| %>
    <tr>
      <td><%= link_to beer.name, beer %></td>
      <td><%= link_to beer.style.beer_type, beer.style %></td>
      <td><%= link_to beer.brewery.name, beer.brewery %></td>
      <td><%= beer.average %></td>
    </tr>
  <% end %>
</table>

<%= link_to("New beer", new_beer_path, class: "btn btn-primary") unless current_user.nil? %>
