<h1>List of ratings</h1>

<p>Number of ratings: <%= @ratings.count %></p>

<div id="ratings">
  <ul>
    <% @ratings.each do |rating| %>
      <li>
        <%= rating.beer.name %> <%= rating.score %> <%= link_to rating.user.username, rating.user %>
      </li>
    <% end %>
  </ul>
</div>

<h2>Recent ratings</h2>
<div id="recent_ratings">
  <ul>
    <% @recent.each do |rating| %>
      <li>
        <%= rating.beer.name %> <%= rating.score %> <%= link_to rating.user.username, rating.user %> <%= rating.created_at %>
      </li>
    <% end %>
  </ul>
</div>


<%= link_to 'Create New Rating', new_rating_path, class: "btn btn-primary" unless current_user.nil? %>
