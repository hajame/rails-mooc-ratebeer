<h1>Ratings</h1>

<div id="top_threes">
  <h2>Best breweries</h2>
  <table id="top_breweries_table" class="table table-dark table-striped">
    <thead>
    <th>Brewery</th>
    <th>Average</th>

    </thead>
    <% @top_breweries.each do |brewery| %>
      <tr>
        <td><%= link_to brewery.name, brewery %></td>
        <td><%= "%.1f" % brewery.average_rating %></td>
      </tr>
    <% end %>
  </table>

  <h2>Best beers</h2>
  <table id="top_beers_table" class="table table-dark table-striped">
    <thead>
    <th>Beer</th>
    <th>Average</th>

    </thead>
    <% @top_beers.each do |beer| %>
      <tr>
        <td><%= link_to beer.name, beer %></td>
        <td><%= "%.1f" % beer.average_rating %></td>
      </tr>
    <% end %>
  </table>

  <h2>Best styles</h2>
  <table id="top_styles_table" class="table table-dark table-striped">
    <thead>
    <th>Style</th>
    <th>Average</th>

    </thead>
    <% @top_styles.each do |style| %>
      <tr>
        <td><%= link_to style.beer_type, style %></td>
        <td><%= "%.1f" % style.average_rating %></td>
      </tr>
    <% end %>
  </table>
</div>

<div id="recent_ratings">
  <h2>Recent ratings</h2>
  <ul>
    <% @recent.each do |rating| %>
      <li>
        <%= rating.beer.name %> <%= rating.score %> <%= link_to rating.user.username, rating.user %> <%= rating.created_at.localtime %>
      </li>
    <% end %>
  </ul>
</div>


<%= link_to 'Create New Rating', new_rating_path, class: "btn btn-primary" unless current_user.nil? %>
